<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="form-header">Edit review:</h1>
    <div class="form-center">
      <form action="/workspaces/<%=workspace_id%>/reviews/<%=review._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <textarea class="form-control" type="textarea" name="text"><%=review.text%></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/workspaces">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
