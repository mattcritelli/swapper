<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Add a review for <%= workspace.name %></h1>
    <div style="width: 30%; margin: 30px auto">
      <form action="/workspaces/<%=workspace._id%>/reviews" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="review[name]" placeholder="name">
        </div>
        <div class="form-group">
          <textarea class="form-control" type="textarea" name="review[text]" placeholder="description"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/workspaces">Go Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
