<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="form-header">Edit <%=workspace.name%></h1>
    <div class="form-center">
      <form action="/workspaces/<%=workspace._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="workspace[name]" value="<%=workspace.name%>">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="workspace[image]" value="<%=workspace.image%>">
        </div>
        <div class="form-group">
          <textarea type="textarea" class="form-control" name="workspace[description]" value="<%=workspace.description%>"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block">Submit Changes</button>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../partials/footer %>
